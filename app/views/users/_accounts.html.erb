<% if current_user == user || current_role?('bookkeeper') || current_role?('administrator') || child_of_current_parent %>
    <div class="panel">
    <h3>Accounts</h3>
<table>
    <thead>
        <tr>
            <th>Account</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        <% Account.where(user_dn: user.dn.to_s).each do |account| %>
            <tr>
                <td><%= link_to account.name, account %></td>
                <td><%= humanized_money_with_symbol account.balance %></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>

<% end %>
