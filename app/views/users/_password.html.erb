<% if current_user == user || current_role?('passwords') || current_role?('directory') || current_role?('administrator') %>
    <div class="panel">
        <h4>Reset Password</h4>
        <%= form_tag reset_password_path do %>
            <%= hidden_field_tag :dn, user.dn.to_s %>
            <%= label_tag :password %>
            <%= password_field_tag :password %>
            <%= label_tag :confirm, 'Confirm Password' %>
            <%= password_field_tag :confirm %>
            <%= submit_tag "Reset Password", class: 'button' %>
        <% end %>
    </div>
<% end %>
