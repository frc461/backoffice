<h2><%= @account.name %></h2>
<h3><%= @account.user_dn.empty? ? "System" : link_to(@account.user.cn, user_path(@account.user.dn)) %></h3>

<% if current_role?('administrator') || current_role?(:bookkeeper) %>
    <div class="panel">
        <h4>Post Transaction</h4>
        <%= form_tag post_account_path(@account) do %>
            <div class="row">
            <div class="large-3 columns">
                <%= label_tag :amount %>
                <%= number_field_tag :amount, nil, step: 0.01 %>
            </div>

            <div class="large-3 columns">
                <%= label_tag :description %>
                <%= text_field_tag :description %>
            </div>

            <div class="large-3 columns">
                <%= label_tag :icon %>
                <%= text_field_tag :icon, 'usd' %>
            </div>

            <div class="large-3 columns">
                <%= submit_tag "Post", class: 'button' %>
            </div>
            </div>
        <% end %>
    </div>
<% end %>


<table>
    <thead>
        <tr>
            <th><%= fa_icon 'money' %></th>
            <th>Date</th>
            <th>Posted by</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
            <% bal = @account.balance_cents %>
        <% @account.transactions.order('created_at DESC').each do |t| %>
            <tr>
                <td><%= fa_icon t.icon %></td>
                <td><%= t.created_at.strftime '%Y-%m-%d' %></td>
                <td><%= t.poster.cn %></td>
                <td><%= t.description %></td>
                <td><%= humanized_money_with_symbol t.amount %></td>
                <td><%= humanized_money_with_symbol bal %></td>
            </tr>
            <% bal -= t.amount_cents %>
        <% end %>
    </tbody>
</table>

<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %>
