<h1>Students</h1>

<% @students.in_groups_of(6) do |r| %>
    <div class="row">
    <% r.each do |student| %>
        <div class="large-2 columns">
        <% if student %>
            <%= link_to student_path(dn: student.dn) do %>
                <%= user_photo student %> [<%= student.roomNumber %>]
                <% if student.graduated? %>
                    <span style="color: #2b2"><%= fa_icon 'graduation-cap' %>
                <% end %>
                <% if student.dropped? %>
                    <span style="color: #c00"><%= fa_icon 'ban' %>
                <% end %>
                        <%= student.cn %>
                        <% if student.graduated? || student.dropped? %>
                        </span>
                    <% end %>

    <% end %>

    <% end %>
    </div>
<% end %>
</div>
<% end %>


